ASTNode EqualityExpression() : {
    Token t;
    ASTNode left, right;
}
{
    left = RelationalExpression()
    (
        (t=<EQ> {recordToken(t);} | t=<NE> {recordToken(t);})
        right = RelationalExpression()
        { left = new BinaryOpNode(t.image, left, right, t.beginLine, t.beginColumn); }
    )*
